<%- content_for :header do %>
   <%- javascript_include_tag "landing" %>
<%- end %>


<%= image_tag("logo.png") %>

<h1>The first live streamed online hackathon.</h1>

<p>March 19th 2011 @ 9am GMT</p>

<div id="launchcountdown"></div>

<%= form_for(@invite_request, :remote=> true, :html=>{:'data-type'=>'html', :id=>'notification_form'}) do |f| %>
  <%= f.text_field :email %> <%= f.submit :value=>"Notify me", :class=>"notify_button" %>
<% end %>

<div id="formreply"></div>

<p><%= link_to "@hackonday", "http://twitter.com/hackonday" %> or <%= link_to "hackline@hackonday.com", "mailto:hackline@hackonday.com" %></p>
