!!!
%html
  %head
    %title Hack On Day
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/application.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    %p{:class=>"notice"}
      = notice
    %p{:class=>"alert"}
      = alert
    #wrapper
      #main
        #content
          #header
            = link_to image_tag("logo.png"), root_path
          = yield
      #footer
        %i
          the hackathon with a twist
        by
        = link_to "@thejessor", "http://twitter.com/thejessor"
        and
        = link_to "@akashmanohar", "http://twitter.com/akashmanohar"
    :javascript
       var _gaq = _gaq || [];
       _gaq.push(['_setAccount', 'UA-21913090-1']);
       _gaq.push(['_trackPageview']);

       (function() {
       var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
       ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
       var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
       })();
