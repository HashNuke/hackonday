<!DOCTYPE html>
<html>
<head>
  <title>CoHack</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <%- if notice %>
    <div class="notice_wrap">
      <span class="notice"><%= notice %></span>
    </div>
  <%- end %>
    
  <%- if alert %>
    <div class="alert_wrap">
      <%= alert %>
    </div>
  <%- end %>

  <%= yield %>

</body>
</html>
